<%- include('partials/header') %>
<div class="ui main text container segment">
    <div class="ui huge header">
        Deactivate <%= blog.title %> 
    </div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div style="display: none;">
            <div class="field">
                <label for="">Book Name</label>
                <input type="text" name="blog[title]" value="<%= blog.title %>">
            </div>
            <div class="field">
                <label for="">Author</label>
                <input type="text" name="blog[author]" value="<%= blog.author %>">
            </div>
            <div class="field">
                <label for="">Genre</label>
                <input type="text" name="blog[genre]" value="<%= blog.genre %>">
            </div>
            <div class="field">
                <label for="">Release Date</label>
                <input type="text" name="blog[releasedate]" value="<%= blog.releasedate %>">
            </div>
            <div class="field">
                <label for="">Image URL</label>
                <input type="text" name="blog[image]" value="<%= blog.image %>">
            </div>
            <div class="field">
                <label for="">Description</label>
                <textarea name="blog[body]" id="" rows="5"><%= blog.body %></textarea>
            </div>
        </div>
        <div class="field">
            <label for="">Status</label>
            <input type="text" name="blog[status]" value="Inactive">
        </div>
        <input class="ui secondary button" type="submit" value="SUBMIT">
    </form>
</div>
<%- include('partials/footer') %>