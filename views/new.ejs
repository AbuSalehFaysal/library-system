<%- include('partials/header') %>
<div class="ui main text container segment">
    <div class="ui huge header">
        New Blog
    </div>
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <label for="">Book Name</label>
            <input type="text" name="blog[title]" placeholder="Book Name">
        </div>
        <div class="field">
            <label for="">Author</label>
            <input type="text" name="blog[author]" placeholder="Author">
        </div>
        <div class="field">
            <label for="">Genre</label>
            <input type="text" name="blog[genre]" placeholder="Genre">
        </div>
        <div class="field">
            <label for="">Release Date</label>
            <input type="text" name="blog[releasedate]" placeholder="Release Date">
        </div>
        <div class="field">
            <label for="">Book Image URL</label>
            <input type="text" name="blog[image]" placeholder="Book Image URL">
        </div>
        <div class="field">
            <label for="">Description</label>
            <textarea name="blog[body]" id="" rows="5"></textarea>
        </div>
        <div class="field">
            <label for="">Status</label>
            <input type="text" name="blog[status]" placeholder="Active or Inactive">
        </div>
        <input class="ui secondary button" type="submit" value="SUBMIT">
    </form>
</div>
<%- include('partials/footer') %>